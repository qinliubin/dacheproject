
.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
 .icon{
  width: 10%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
 }
 .icon1{
   width: 10%;
   height: 88rpx;
   text-align: center;
   position: absolute;
   top: 10rpx;
   left: 10rpx;
 }
 .icon2{
  width: 10%;
  height: 88rpx;
  text-align: center;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
 .image{
   width: 66rpx;
   height: 66rpx;
   margin: auto;
 }
 .text{
   font-size: 19rpx;
 }
.title {
  width: 80%;
  height: 88rpx;
  margin: 0 auto;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
 
.title-sel {
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.title-sel  .line-style{
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.title-sel-selected{
  color: #006bff;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title-sel-selected .line-style{
  background: #006bff;
  height: 6rpx;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.swiper {
  width: 90%;
  flex: 1;
  overflow: scroll;
  margin: 0 auto;
}
 
.record-item {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}
 
.name{
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  /* background: #fff; */
  background: -webkit-linear-gradient(top,pink,lightblue,skyblue);
  background: #66CCFF;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1;
}
.row{
  margin-top: 20rpx;
  overflow: hidden;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ccc;
  margin-left: 20rpx;
  margin-right: 20rpx;
  color: #777;
  background: #fff;
 
 }
 .info-input{
  height: 100rpx;
  margin-left: 50rpx;
  color: #777;
    float: left;
 }
 .button{
   margin-top: 20rpx;
 }