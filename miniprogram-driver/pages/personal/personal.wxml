<view>
  <view class="userinfo">
    <view class="account-bg"></view> 
    <image class="userinfo-avatar" src="{{touuurl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{username}}</text>
    <view class="account-bg"></view> 
 </view>
  <view class="separate"></view>
  <view class="order">
    <text class="myorder-text">个人信息</text>
    <text class="myorderlook-text" bindtap="userinfor">查看全部信息</text>
    <image class="next-image" src="http://49.234.64.182:86/static/applet/img/jiantou.png" bindtap="userinfor"></image>
  </view>
  <view class="separate"></view>
  <view class="order">
    <text class="myorder-text">我的订单</text>
    <text class="myorderlook-text" bindtap="bindorder">查看全部订单</text>
    <image class="next-image" src="http://49.234.64.182:86/static/applet/img/jiantou.png" bindtap="bindorder"></image>
  </view>

  <view class="navs">
    <view class="nav-item" bindtap="noPay">
      <image class="cell-img" src="http://49.234.64.182:86/static/applet/img/yifu.png"></image>
      <view>{{noPay}}</view>
    </view>
    <view class="nav-item" bindtap="noSend">
      <image class="cell-img" src="http://49.234.64.182:86/static/applet/img/daifu.png"></image>
      <view>{{noSend}}</view>
    </view>
    <view class="nav-item" bindtap="sended">
      <image class="cell-img" src="http://49.234.64.182:86/static/applet/img/yiping.png"></image>
      <view>{{sended}}</view>
    </view>
    <view class="nav-item" bindtap="completed">
      <image class="cell-img" src="http://49.234.64.182:86/static/applet/img/daiping.png"></image>
      <view>{{completed}}</view>
    </view>
  </view>

  <view class="separate"></view>
